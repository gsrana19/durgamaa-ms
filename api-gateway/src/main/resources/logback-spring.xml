<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Read Spring Boot application name -->
    <springProperty scope="context" name="serviceName" source="spring.application.name"/>

    <!-- Environment-based log directory -->
    <!-- Default to local directory if no profile is set -->
    <property name="LOG_DIR" value="D:/Learning/GenAI/application/durgamaa/logs"/>
    
    <springProfile name="aws,prod">
        <property name="LOG_DIR" value="/home/ubuntu/durgamaa-ms/logs"/>
    </springProfile>

    <!-- Dynamic log file name based on service name -->
    <property name="LOG_FILE_NAME" value="mandir_application_${serviceName:-unknown}.log"/>

    <!-- JSON Console appender for structured logging (stdout) -->
    <appender name="JSON_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp>
                    <fieldName>timestamp</fieldName>
                    <timeZone>UTC</timeZone>
                </timestamp>
                <pattern>
                    <pattern>
                        {
                            "level": "%level",
                            "logger": "%logger{36}",
                            "thread": "%thread",
                            "message": "%message",
                            "service": "${serviceName:-unknown}",
                            "traceId": "%X{traceId:-}",
                            "spanId": "%X{spanId:-}",
                            "correlationId": "%X{correlationId:-}",
                            "path": "%X{path:-}",
                            "method": "%X{method:-}"
                        }
                    </pattern>
                </pattern>
                <stackTrace>
                    <fieldName>stackTrace</fieldName>
                </stackTrace>
            </providers>
        </encoder>
    </appender>

    <!-- Pattern-based Console appender for local/dev -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} service=${serviceName:-unknown} traceId=%X{traceId:-} spanId=%X{spanId:-} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Rolling file appender: mandir_application_<serviceName>.log -->
    <appender name="ROLLING_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- Current active log file -->
        <file>${LOG_DIR}/${LOG_FILE_NAME}</file>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} service=${serviceName:-unknown} traceId=%X{traceId:-} spanId=%X{spanId:-} - %msg%n</pattern>
        </encoder>

        <!-- Roll by date + size, keep 30 days -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- Rolled files will look like: LOG_DIR/mandir_application_<serviceName>.2026-01-15.0.log -->
            <fileNamePattern>${LOG_DIR}/mandir_application_${serviceName:-unknown}.%d{yyyy-MM-dd}.%i.log</fileNamePattern>

            <!-- Max size per file before rolling to next index on same day -->
            <maxFileSize>10MB</maxFileSize>

            <!-- Keep logs for last 30 days -->
            <maxHistory>30</maxHistory>

            <!-- Total size cap: 1GB -->
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Root logger uses JSON console and rolling file -->
    <root level="INFO">
        <appender-ref ref="JSON_CONSOLE"/>
        <appender-ref ref="ROLLING_FILE"/>
    </root>

    <!-- Reduce noise from Spring Cloud Gateway -->
    <logger name="org.springframework.cloud.gateway" level="WARN"/>
    <logger name="org.springframework.web" level="WARN"/>
    <logger name="reactor.netty" level="WARN"/>
</configuration>
